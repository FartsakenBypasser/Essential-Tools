{
  "name": "claude-code-assistant",
  "displayName": "Claude Code Assistant",
  "description": "AI code assistance powered by Claude",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:claude-assistant.explain",
    "onCommand:claude-assistant.optimize",
    "onCommand:claude-assistant.comment",
    "onCommand:claude-assistant.debug",
    "onCommand:claude-assistant.chat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-assistant.explain",
        "title": "Explain Code",
        "category": "Claude"
      },
      {
        "command": "claude-assistant.optimize",
        "title": "Optimize Code",
        "category": "Claude"
      },
      {
        "command": "claude-assistant.comment",
        "title": "Add Comments",
        "category": "Claude"
      },
      {
        "command": "claude-assistant.debug",
        "title": "Help Debug",
        "category": "Claude"
      },
      {
        "command": "claude-assistant.chat",
        "title": "Chat with Claude",
        "category": "Claude"
      },
      {
        "command": "claude-assistant.changeApiKey",
        "title": "Change API Key",
        "category": "Claude"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "claude-assistant.explain",
          "when": "editorHasSelection",
          "group": "claude@1"
        },
        {
          "command": "claude-assistant.optimize",
          "when": "editorHasSelection",
          "group": "claude@2"
        },
        {
          "command": "claude-assistant.comment",
          "when": "editorHasSelection",
          "group": "claude@3"
        },
        {
          "command": "claude-assistant.debug",
          "when": "editorHasSelection",
          "group": "claude@4"
        }
      ],
      "commandPalette": [
        {
          "command": "claude-assistant.chat"
        },
        {
          "command": "claude-assistant.changeApiKey"
        }
      ]
    },
    "configuration": {
      "title": "Claude Code Assistant",
      "properties": {
        "claude-assistant.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your Anthropic API key for Claude",
          "order": 1
        },
        "claude-assistant.model": {
          "type": "string",
          "default": "claude-3-5-haiku-20241022",
          "description": "Claude model to use",
          "enum": [
            "claude-3-5-haiku-20241022",
            "claude-3-haiku-20240307",
            "claude-opus-4.1-20250805",
            "claude-opus-4-20250514",
            "claude-sonnet-4-20250514",
            "claude-3-7-sonnet-20250219",
            "claude-3-5-sonnet-20241022", 
            "claude-3-opus-20240229",
            "claude-3-sonnet-20240229"
          ],
          "order": 2
        },
        "claude-assistant.maxTokens": {
          "type": "number",
          "default": 200000,
          "description": "Maximum tokens for Claude responses (set very high for unlimited responses)",
          "order": 3
        },
        "claude-assistant.autoAttachFile": {
          "type": "boolean",
          "default": true,
          "description": "Automatically attach current file when switching tabs",
          "order": 4
        },
        "claude-assistant.maxImages": {
          "type": "number",
          "default": 3,
          "description": "Maximum number of images to attach",
          "order": 5
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "claude-chat",
          "name": "Claude Chat",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-assistant",
          "title": "Claude Assistant",
          "icon": "$(robot)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
